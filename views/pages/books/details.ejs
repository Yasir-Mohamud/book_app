

<% oneBook.forEach( book => { %>
 
  <div class="addbooks">
    <form action="/updateBook" method="post">
   <div id="detailimages"><img src=" <%= book.image_url %>" /></div> 
    <div id="detailtitle">  <h2><%= book.title %> </h2> </div>
    <div id="detailauthors"> <h4><%= book.authors %></h4> </div>
    <div id="detailisbn"> <h4><%= book.isbn %></h4> </div>
    <div id="detaildescription"> 
     <p> <%= book.description %> </p>
   </div>
    <div id="detailbookshelf"> <h4><%= book.bookshelf %></h4> </div>
  
   <input type="hidden" name="title" value="<%= book.title %>" />
   <input type="hidden" name="authors" value="<%= book.authors %>" />
   <input type="hidden" name="isbn" value="<%= book.isbn %>" />
    <input type="hidden" name="image_url" value="<%= book.image_url %>" />
     <input type="hidden" name="description" value="<%= book.description %>" />
     <input type="hidden" name="bookshelf" value="<%= book.bookshelf %>" />
     <button type="submit" >UPDATE DETAILS</button>
   </form>

 
 </div> 
<% }) %>
